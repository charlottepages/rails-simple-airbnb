<h1>All our Flats (<%= @flats.count %>)</h1>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/random');">
          </div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="fa fa-users" aria-hidden="true"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex">
                <i class="fa fa-eur" aria-hidden="true"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat %>
            <%= link_to 'Edit', edit_flat_path(flat) %>
            <%= link_to "Delete", flat_path(flat), method: :delete %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
